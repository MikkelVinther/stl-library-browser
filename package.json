{
  "name": "stl-library-browser",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "postinstall": "electron-rebuild",
    "dev": "vite",
    "dev:electron": "concurrently \"cross-env BROWSER=none vite --port 5177 --strictPort\" \"wait-on http://localhost:5177 && cross-env VITE_DEV_SERVER_URL=http://localhost:5177 electron .\"",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "build": {
    "appId": "com.stl-library.browser",
    "productName": "STL Library",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.18",
    "better-sqlite3": "^12.6.2",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.171.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.183.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.5.0",
    "electron-builder": "^26.8.1",
    "happy-dom": "^20.6.3",
    "jsdom": "^28.1.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "vite": "^5.4.14",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  }
}
